<div>
<center>
    <br>
  <h1><%= image_tag("mobilewrxlogo.jpg") %></h1>
  <br>
   <h5>Here are the latest promotions!</h5>

		<% if can? :create, Promotion %>
		<%= link_to "New Promotion", new_promotion_path, class: 'btm btn-primary btn-mini' %>
	<% end %>
</center>
<br>
<% @promotions.each do |promotion| %>
<div class="row">
	<div class="span3">
		<div class="thumbnail">
			<p><%= image_tag(promotion.image_url) %></p>
			<p align="center"><%= promotion.title %></p>
			<p align="center"><%= promotion.description %></p>
			<p align="center"><%= promotion.price %></p>
			<p align="center"><%= promotion.expiration %></p>
			<p align="center"><%= link_to promotion.website %></p>
			<p align="center"><%= image_tag(promotion.qrcode_url) %></p>
			<p align="center"><a href="#" class="btn btn-mini btn-primary">More</a></p>
		</div>
		</div>


<% end %>
	</div>
	<div class="row">
		<div class="span12">
			<div align="center">
	<p><%= will_paginate @promotions %></p>
</div>
</div>
</div>






